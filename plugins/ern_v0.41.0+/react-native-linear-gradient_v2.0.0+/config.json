{
  "android": {
    "root": "",
    "moduleName": "android"
  },
  "ios": {
    "react-native@<0.61.0": {
      "copy": [
        { "source": "BVLinearGradient", "dest": "{{{projectName}}}/Libraries/BVLinearGradient" },
        { "source": "BVLinearGradient.xcodeproj", "dest": "{{{projectName}}}/Libraries/BVLinearGradient"}
      ],
      "pbxproj": {
        "addProject": [
          { "path": "BVLinearGradient/BVLinearGradient.xcodeproj", "group": "Libraries", "staticLibs": [ { "name": "libBVLinearGradient.a", "target": "BVLinearGradient" } ] }
        ],
        "addHeaderSearchPath": [
          "\"$(SRCROOT)/{{{projectName}}}/Libraries/BVLinearGradient/**\""
        ]
      }
    }
  }
}
