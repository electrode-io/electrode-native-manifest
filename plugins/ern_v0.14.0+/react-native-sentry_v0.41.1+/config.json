{
  "android": {
    "root": "",
    "moduleName": "android",
    "dependencies": [
      "io.sentry:sentry-android:1.7.5"
    ]
  },
  "ios": {
    "copy": [
      { "source": "ios/**", "dest": "{{{projectName}}}/Libraries/RNSentry" }
    ],
    "pbxproj": {
        "addProject": [
        { "path": "RNSentry/RNSentry.xcodeproj", "group": "Libraries", "staticLibs": [ { "name": "libRNSentry.a.a", "target": "RNSentry" } ] }
      ],
      "addHeaderSearchPath": [
        "\"$(SRCROOT)/{{{projectName}}}/Libraries/RNSentry/**\""
      ]
    }
  }
}